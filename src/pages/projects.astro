---
import BaseLayout from '../layouts/BaseLayout.astro';
// ðŸŽ® Learning: Now projects and research use the same constants!
import { PROJECTS, createTagBadges } from '../utils/projectConstants.js';
---

<BaseLayout title="Projects">
    <div class="content-section">
        <h2>Projects</h2>
        <p>This page is dedicated to fun personal projects! Some more useful than others...</p>
       
        <div class="projects-scroll">
            <!-- Pixel Art Converter Project - now using constants! -->
            <a href={PROJECTS.PIXEL_ART_CONVERTER.url} class="project-item project-link">
                <!-- ðŸŽ® Learning: Check if icon is image path or emoji -->
                {PROJECTS.PIXEL_ART_CONVERTER.icon.startsWith('/') ? (
                    <img src={PROJECTS.PIXEL_ART_CONVERTER.icon} alt={PROJECTS.PIXEL_ART_CONVERTER.name} class="project-icon-img" />
                ) : (
                    <div class="project-icon">{PROJECTS.PIXEL_ART_CONVERTER.icon}</div>
                )}
                <h3>{PROJECTS.PIXEL_ART_CONVERTER.name}</h3>
                
                <!-- ðŸŽ® Learning: Same tag system as research, but different styling -->
                <div class="project-tags" set:html={createTagBadges(PROJECTS.PIXEL_ART_CONVERTER.tags)}></div>
                
                <p class="project-description">
                    {PROJECTS.PIXEL_ART_CONVERTER.description}
                </p>
            </a>

            <!-- Placeholder Project 1 -->
            <div class="project-item">
                <div class="project-icon">ðŸ“¦</div>
                <h3>Placeholder Project 1</h3>
                <p class="project-description">
                    Coming soon! This will be your next amazing project.
                </p>
            </div>

            <!-- Placeholder Project 2 -->
            <div class="project-item">
                <div class="project-icon">ðŸ“¦</div>
                <h3>Placeholder Project 2</h3>
                <p class="project-description">
                    Coming soon! This will be another cool project.
                </p>
            </div>
        </div>
    </div>
</BaseLayout>

<style>
    .project-tags {
        margin: 0.5rem 0;
        text-align: center;
    }
    
    /* ðŸŽ® Learning: Styling for custom project icon images */
    .project-icon-img {
        width: 60px;
        height: 60px;
        object-fit: cover;
        border-radius: 8px;
        margin-bottom: 1rem;
        /* Removed border for cleaner look */
    }
</style>
