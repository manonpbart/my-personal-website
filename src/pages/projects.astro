---
import BaseLayout from '../layouts/BaseLayout.astro';
// Learning: Now projects and research use the same constants!
import { PROJECTS, createTagBadges } from '../utils/projectConstants.js';
---

<BaseLayout title="Projects">
    <div class="content-section">
        <h2>Projects</h2>
        <p>This page is dedicated to fun personal projects! Some more useful than others...</p>
        
        <div class="projects-scroll">
            <!-- Pixel Art Converter Project - now using constants! -->
            <a href={PROJECTS.PIXEL_ART_CONVERTER.url} class="project-item project-link">
                <div class="project-icon">{PROJECTS.PIXEL_ART_CONVERTER.icon}</div>
                <h3>{PROJECTS.PIXEL_ART_CONVERTER.name}</h3>
                
                <!-- ðŸŽ® Learning: Same tag system as research, but different styling -->
                <div class="project-tags" set:html={createTagBadges(PROJECTS.PIXEL_ART_CONVERTER.tags)}></div>
                
                <p class="project-description">
                    {PROJECTS.PIXEL_ART_CONVERTER.description}
                </p>
            </a>
        </div>
    </div>
</BaseLayout>

<style>
    .project-tags {
        margin: 0.5rem 0;
        text-align: center;
    }
</style>